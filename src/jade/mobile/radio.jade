  script.
    let dialog = new YYDialog();
    let toast = new YYToast();
    $(document).on('tap', '.dialog--alert', () => {
      console.log('alert');
      dialog.alert({
        title: '标题',
        content: 'ert内容alert内容alert',
        onOk: () => {
          console.log('alert ok');
        }
      })
    })
    .on('tap', '.dialog--confirm', () => {
      dialog.confirm({
        title: '标题标题',
        content: '正文操作正文。。。',
        onOk: () => {
          toast.success({
            title: '选择确认',
          });
        },
        onCancel: () => {
          toast.cancel({
            title: '选择取消',
          });
        },
      });
    })
